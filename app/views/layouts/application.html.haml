!!! 5
%html
  %head
    -if @post.nil?
      %title Foxycoder.com
    -else
      %title= "#{@post.title} | Foxycoder.com"
    = stylesheet_link_tag    "application"
    
    = javascript_include_tag "application"
    = csrf_meta_tags
    
  %body
    .topbar
    .container
      = render :partial => "layouts/header"
      = yield
    .clear
    = render :partial => "layouts/footer"
